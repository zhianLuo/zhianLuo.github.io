<script>
	function changeImage(){
		var element=document.getElementById("myimage")
		if (element.src.match("yellow")){
  			element.src="img/cyan.gif";
  		}
		else{
  		element.src="img/yellow.gif";
   		}
	}
</script>	
	
</body>
</html>
